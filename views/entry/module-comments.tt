  <fieldset class="comments_settings">
  <h3 class='ui-corner-top'>[% ".header" | ml %]</h3>
  <div class='inner'>
  <p>
    [%- form.select( label = "Comments:"
        name = "comment_settings"
        id = "comment_settings"

        items = [
            ""              "Journal Default"
            "nocomments"    "Disabled"
            "commentsclosed" "Closed"
            "noemail"       "Don't Email"
        ]
    ) -%]
  </p>
  <p>
    [%- form.select( label = "Screening:"
        name = "opt_screening"
        id = "opt_screening"

        items = [
            ""      "Journal Default"
            "N"     "Disabled"
            "R"     "Anonymous Only"
            "F"     "Non-access List"
            "A"     "All Comments"
        ]
    ) -%]
  </p>
  </div>
  </fieldset>
